@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Ana Sayfa Başlık -->
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">
            <i class="bi bi-house-door-fill me-2"></i> Ana Sayfa
        </h1>
        <p class="lead text-muted">
            Hoş geldiniz! Buradan istediğiniz işlemleri yapabilirsiniz.
        </p>
    </div>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success d-flex flex-column align-items-center shadow-lg text-center mb-4" role="alert">
            <i class="bi bi-check-circle-fill fs-3 mb-2"></i>
            <strong>@TempData["SuccessMessage"]</strong>
        </div>
    }

    <!-- Giriş Durumu -->
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <div class="alert alert-success d-flex flex-column align-items-center shadow-lg text-center" role="alert">
                <i class="bi bi-check-circle-fill fs-3 mb-2"></i>
                <strong>Admin olarak giriş yapmaktasınız.</strong>
            </div>
        }
        else
        {
            <div class="alert alert-info d-flex flex-column align-items-center shadow-lg text-center" role="alert">
                <i class="bi bi-info-circle-fill fs-3 mb-2"></i>
                <strong>Ziyaretçi olarak giriş yapmaktasınız.</strong>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning d-flex flex-column align-items-center shadow-lg text-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-3 mb-2"></i>
            <strong>Lütfen giriş yapın ya da kayıt olun.</strong>
            <div class="mt-3">
                <a asp-controller="Home" asp-action="Login" class="btn btn-primary btn-sm me-2">
                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                </a>
                <a asp-controller="Home" asp-action="Register" class="btn btn-success btn-sm">
                    <i class="bi bi-person-plus-fill"></i> Kayıt Ol
                </a>
            </div>
        </div>
    }
</div>
