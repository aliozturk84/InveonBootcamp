@using LibraryManagementApp.Web.Models.Entities

@{
    ViewData["Title"] = "Register";
}

@model AppUser



<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg border-0" style="width: 25rem; border-radius: 15px;">
        <!-- Üst Kısım Başlık -->
        <div class="card-header text-white text-center" style="background: linear-gradient(to right, #28a745, #1e7e34); border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <h3 class="mb-0">📝</h3>
        </div>

        <!-- Form Alanı -->
        <div class="card-body">
            <form asp-action="Register" method="post">
                <!-- Kullanıcı Adı Input -->
                <div class="mb-4">
                    <label for="username" class="form-label fw-bold text-secondary">👤 Kullanıcı Adı</label>
                    <input asp-for="UserName" id="username" class="form-control form-control-lg" placeholder="Kullanıcı adınızı girin" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Email Input -->
                <div class="mb-4">
                    <label for="email" class="form-label fw-bold text-secondary">📧 Email</label>
                    <input asp-for="Email" id="email" class="form-control form-control-lg" placeholder="Email adresinizi girin" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="form-label fw-bold text-secondary">🔑 Şifre</label>
                    <input type="password" name="password" class="form-control form-control-lg" placeholder="Şifrenizi girin" required />
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-person-plus me-2"></i> Kayıt Ol
                    </button>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <div class="card-footer text-center text-muted" style="border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
            <small>Zaten hesabınız var mı? <a href="/Home/Login" class="text-success fw-bold">Giriş Yap</a></small>
        </div>
    </div>
</div>
