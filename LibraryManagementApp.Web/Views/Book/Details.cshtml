@model Book

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <!-- Kart Tasarımı -->
    <div class="card shadow-lg border-0">
        <!-- Kart Başlığı -->
        <div class="card-header bg-gradient bg-primary text-white text-center py-3 shadow-sm">
            <h2 class="mb-0 fw-bold">
                <i class="bi bi-book"></i> @Model.Title
            </h2>
        </div>

        <!-- Kart Gövdesi -->
        <div class="card-body p-4">
            <div class="row">
                <!-- Sol Alan -->
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Yazar:</strong>
                            <span>@Model.Author</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Yayın Yılı:</strong>
                            <span>@Model.PublicationYear</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>ISBN:</strong>
                            <span>@Model.ISBN</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Tür:</strong>
                            <span>@Model.Genre</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Yayınevi:</strong>
                            <span>@Model.Publisher</span>
                        </li>
                    </ul>
                </div>

                <!-- Sağ Alan -->
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Sayfa Sayısı:</strong>
                            <span>@Model.PageCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Dil:</strong>
                            <span>@Model.Language</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Mevcut Kopya Sayısı:</strong>
                            <span>@Model.AvailableCopies</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Kitap Özeti -->
            <div class="mt-4">
                <h5 class="fw-bold text-secondary">
                    <i class="bi bi-card-text"></i> Kitap Özeti
                </h5>
                <p class="text-justify text-muted">
                    @Model.Summary
                </p>
            </div>
        </div>

        <!-- Footer Buton -->
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Geri Dön
            </a>
        </div>
    </div>
</div>



