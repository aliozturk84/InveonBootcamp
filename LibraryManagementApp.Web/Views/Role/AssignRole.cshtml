@{
    ViewData["Title"] = "AssignRole";
    var allRoles = ViewBag.AllRoles as List<AppRole>;
    var userRoles = ViewBag.UserRoles as List<string>;
}

<div class="container mt-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary display-5">
            <i class="bi bi-person-check"></i> Kullanıcıya Rol Atama
        </h2>
    </div>

    <!-- Başarı Mesajı -->
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success text-center shadow-sm">
            @ViewBag.SuccessMessage
        </div>
    }

    <!-- Kullanıcı Rol Yönetimi -->
    <div class="card shadow-lg border-0 rounded">
        <!-- Kart Başlık -->
        <div class="card-header bg-dark text-white text-center">
            <h4 class="fw-bold mb-0">
                <i class="bi bi-person-fill"></i> Kullanıcı:
                <span class="text-warning">@ViewBag.UserName</span>
            </h4>
        </div>

        <!-- Kart Gövdesi -->
        <div class="card-body row g-4">
            <!-- Kullanıcının Mevcut Rolleri -->
            <div class="col-md-6">
                <div class="p-4 bg-light rounded shadow-sm h-100">
                    <h5 class="text-center mb-3 text-secondary fw-bold">
                        <i class="bi bi-shield-lock"></i> Mevcut Roller
                    </h5>
                    <ul class="list-group list-group-flush">
                        @foreach (var role in userRoles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0">
                                <span class="fw-bold text-secondary">
                                    <i class="bi bi-shield-fill-check text-success"></i> @role
                                </span>
                                <form asp-action="RemoveRole" method="post" style="display:inline;">
                                    <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                    <input type="hidden" name="roleName" value="@role" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm shadow-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </li>
                        }
                        @if (!userRoles.Any())
                        {
                            <li class="list-group-item text-muted text-center">Bu kullanıcıya henüz rol atanmadı.</li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Yeni Rol Atama -->
            <div class="col-md-6">
                <div class="p-4 bg-light rounded shadow-sm h-100">
                    <h5 class="text-center mb-3 text-success fw-bold">
                        <i class="bi bi-plus-circle-fill"></i> Yeni Rol Ata
                    </h5>
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" name="userId" value="@ViewBag.UserId" />
                        <div class="mb-3">
                            <label for="roleName" class="form-label fw-bold text-secondary">
                                <i class="bi bi-award-fill text-info"></i> Roller
                            </label>
                            <select name="roleName" id="roleName" class="form-select shadow-sm" required>
                                <option value="">Bir rol seçiniz...</option>
                                @foreach (var role in allRoles)
                                {
                                    if (!userRoles.Contains(role.Name))
                                    {
                                        <option value="@role.Name">@role.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg me-2 shadow">
                                <i class="bi bi-check-circle"></i> Rol Ata
                            </button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary btn-lg shadow">
                                <i class="bi bi-arrow-left-circle"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>