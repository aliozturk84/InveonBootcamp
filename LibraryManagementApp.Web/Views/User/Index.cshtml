@model List<AppUser>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Kullanıcı Listesi</h2>
    <!-- Başarı Mesajı -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center shadow-sm" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex justify-content-end mb-3">
        <!-- Kullanıcı Ekle Butonu -->
        <a asp-action="Create" class="btn btn-success">+ Kullanıcı Ekle</a>
    </div>
    <table class="table table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Mail</th>
                <th>Güncelle</th>
                <th>Rol</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="fw-bold text-center">
                        <i class="bi bi-person-circle text-primary"></i> @user.UserName
                    </td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Role" asp-action="AssignRole" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                        <a href="#" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#roleModal-@user.Id">
                            Rolleri Gör
                        </a>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </td>
                </tr>
                <!-- Kullanıcıya Ait Roller Modalı -->
                <div class="modal fade" id="roleModal-@user.Id" tabindex="-1" aria-labelledby="roleModalLabel-@user.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="roleModalLabel-@user.Id">
                                    <i class="bi bi-person-circle text-primary"></i> Kullanıcının Rolleri: <span class="fw-bold">@user.UserName</span>
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @if (ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id))
                                {
                                    var roles = (List<string>)ViewBag.UserRoles[user.Id];
                                    @if (roles.Any())
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var role in roles)
                                            {
                                                <li class="list-inline-item">
                                                    <span class="badge bg-success">@role</span>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted text-center">Bu kullanıcıya rol atanmamış.</p>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted text-center">Bu kullanıcıya rol atanmamış.</p>
                                }
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>
